{
  "compilerOptions": {
    "outDir": "lib",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "types": ["node"],
  "exclude": ["node_modules", "lib/**/*", "src/__tests__"]
}
